{
    "manifest_version": 3,
    "name": "Glass Tilt Game",
    "version": "0.1.0",
    "description": "Reimagining content discovery on Lens.",
    "icons": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png",
      "128": "icons/icon-128.png"
    },
    "content_scripts": [
      {
        "matches": [
          "https://*.hey.xyz/*"
        ],
        "js": [
          "src/content_scripts/tilt-button.ts"
        ],
        "run_at": "document_idle"
      }
    ],
    "host_permissions": [
      "https://*.hey.xyz/*"
    ],
    "background": {
       "service_worker": "src/background_scripts/background.ts",
       "type": "module"
     }
  }