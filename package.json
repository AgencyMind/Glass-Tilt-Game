{
  "name": "glass-tilt-game",
  "version": "0.1.0",
  "description": "Content discovery that conspires in your favor, without tracking your every move",
  "type": "module",
  "scripts": {
    "clean": "rimraf .wxt .output dist",
    "lint": "eslint . --ext .ts && tsc --noEmit",
    "prepare": "npx wxt prepare --config \"%cd%/wxt.config.ts\"",
    "dev": "npx wxt dev --config \"%cd%/wxt.config.ts\"",
    "watch": "npx wxt dev --config \"%cd%/wxt.config.ts\"",
    "build": "npx wxt build --config \"%cd%/wxt.config.ts\"",
    "zip": "npx wxt zip --config \"%cd%/wxt.config.ts\""
  },
  "devDependencies": {
    "@types/node": "^22.15.13",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.4.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "wxt": "^0.20.6"
  }
}